@model SkinRecommendationsViewModel
@using ECommerce.Models
@{
    ViewData["Title"] = "ForYou Recommendations";
}

<h2>ForYou Recommendations</h2>

@if (!Model.UserSkinType.HasValue)
{
    <div class="alert alert-info">
        We don't have your skin profile yet. Please take the
        <a asp-controller="Skin" asp-action="Quiz">Skin Type Quiz</a>.
    </div>
}
else
{
    <div class="mb-3">
        <h5>Your Skin Profile</h5>
        <p>
            <strong>Skin Type:</strong> @Model.UserSkinType.Value.ToString()<br />
            <strong>Main Concern:</strong>
            @(Model.UserConcern.HasValue && Model.UserConcern != SkinConcern.None
                ? Model.UserConcern.Value.ToString()
                : "None")
        </p>

        <a asp-controller="Skin" asp-action="Quiz" class="btn btn-sm btn-outline-secondary">
            Retake Quiz
        </a>
    </div>

    <hr />

    <h4>Products Selected For You</h4>

    @if (!Model.Products.Any())
    {
        <p>No specific matches found. Try browsing the <a asp-controller="Products" asp-action="Index">shop</a>.</p>
    }
    else
    {
        <div class="row">
            @foreach (var p in Model.Products)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <img class="card-img-top"
                             src="@(string.IsNullOrEmpty(p.ImageUrl) ? "https://via.placeholder.com/300" : p.ImageUrl)"
                             alt="@p.Name" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@p.Name</h5>
                            @if (!string.IsNullOrEmpty(p.Brand))
                            {
                                <p class="text-muted mb-1">@p.Brand</p>
                            }
                            <p class="text-muted mb-1">@p.Price.ToString("C")</p>
                            @if (!string.IsNullOrEmpty(p.KeyIngredients))
                            {
                                <small class="text-muted">Key Ingredients: @p.KeyIngredients</small>
                            }
                            <div class="mt-auto pt-2">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@p.Id"
                                   class="btn btn-sm btn-outline-secondary">Details</a>
                                <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@p.Id" />
                                    <button type="submit" class="btn btn-sm btn-primary">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}
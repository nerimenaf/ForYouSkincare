@model Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="row">
    <div class="col-md-6">
        <img class="img-fluid" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/600" : Model.ImageUrl)" alt="@Model.Name" />
    </div>
    <div class="col-md-6">
        <h2>@Model.Name</h2>
        <p class="text-muted">@Model.Price.ToString("C")</p>
        <p>@Model.Description</p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>

        <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">
            <input type="hidden" name="productId" value="@Model.Id" />
            <div class="input-group mb-3" style="max-width: 200px;">
                <input type="number" name="quantity" value="1" min="1" class="form-control" />
                <button type="submit" class="btn btn-primary">Add to Cart</button>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <h4 class="mt-4">Add to My Routine</h4>
                    <form asp-controller="Routine" asp-action="Add" method="post" class="d-inline">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <input type="hidden" name="routineType" value="Morning" />
                        <button type="submit" class="btn btn-outline-primary btn-sm">Add to Morning</button>
                    </form>
                    <form asp-controller="Routine" asp-action="Add" method="post" class="d-inline ms-2">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <input type="hidden" name="routineType" value="Night" />
                        <button type="submit" class="btn btn-outline-secondary btn-sm">Add to Night</button>
                    </form>
                }
            </div>
        </form>
    </div>
</div>
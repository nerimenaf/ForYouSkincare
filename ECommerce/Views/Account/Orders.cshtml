@model IEnumerable<Order>
@{
    ViewData["Title"] = "Order History";
}

<h2>Your Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Total</th>
                <th>Items</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.OrderNumber</td>
                <td>@o.CreatedAt.ToLocalTime()</td>
                <td>@o.TotalAmount.ToString("C")</td>
                <td>
                    <ul class="mb-0">
                        @foreach (var item in o.Items)
                        {
                            <li>@item.Product?.Name x @item.Quantity</li>
                        }
                    </ul>
                </td>
            </tr>
        }
        </tbody>
    </table>
}